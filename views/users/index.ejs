<section>
<header>
  <h2> Usuarios </h2>
</header>

<table class='table table-striped table-bordered table-condensed'>
  <thead>
    <tr>
      <th>Login</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% for (var i in users) { %>
    <tr>
       <td> <%= users[i].login %> </td>
       <td> <%= users[i].name %>  </td>
       <td> <%= users[i].email %> </td>
       <td> 
            <form class='form-inline pull-right' method='post' action='/users/<%= users[i].id %>'>
              <input type='hidden' name='_method' value='delete'>
              <a href="/users/<%= users[i].id %>" class='btn btn-info btn-mini'> 
                <i class='icon-eye-open icon-white'></i> Ver 
              </a>
              <% if (session.user && session.user.id == users[i].id) { %>
                <a class='btn btn-warning btn-mini' href="/users/<%= users[i].id %>/edit"> 
                  <i class='icon-edit icon-white'></i> Editar 
                </a>
              <% } %>
            </form> 
       </td> 
    </tr>
  <%  }; %>
  </tbody>
</table>

<footer>
  <nav> <a href="/users/new"> Crear nuevo Usuario </a> </nav>
</footer>
<section>


